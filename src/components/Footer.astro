---
const currentYear = new Date().getFullYear();

const footerLinks = {
  services: [
    { name: 'SEO Data-Driven', href: '/services/seo-data-driven' },
    { name: 'Audit Technique', href: '/services/audit-technique' },
    { name: 'Formation', href: '/services/formation' }
  ],
  entreprise: [
    { name: 'À propos', href: '/a-propos' },
    { name: 'Méthodologie', href: '/methodologie' },
    { name: 'Contact', href: '/contact' }
  ],
  legal: [
    { name: 'Mentions légales', href: '/mentions-legales' },
    { name: 'Politique de confidentialité', href: '/confidentialite' },
    { name: 'CGV', href: '/cgv' }
  ]
};

const socialLinks = [
  {
    name: 'LinkedIn',
    href: '#',
    icon: `<path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>`
  },
  {
    name: 'Twitter',
    href: '#',
    icon: `<path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>`
  }
];
---

<footer class="relative bg-gray-900 text-white pt-12 pb-8 overflow-hidden">
  <!-- Fond décoratif -->
  <div class="absolute inset-0 bg-gradient-to-b from-primary-900/10 to-secondary-900/10"></div>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,_rgba(59,130,246,0.1),_transparent_70%)]"></div>
  
  <div class="container relative mx-auto px-4">
    <!-- Section principale -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <!-- Présentation -->
      <div class="animate-fade-in">
        <a href="/" class="inline-block group">
          <span class="text-2xl font-bold bg-gradient-to-r from-primary-400 via-secondary-400 to-primary-400 bg-clip-text text-transparent">
            HorizonReach
          </span>
          <span class="block mt-1 text-sm text-gray-400">SEO Data-Driven</span>
        </a>
        <p class="mt-4 text-gray-400 text-sm leading-relaxed">
          Optimisez votre visibilité en ligne grâce à notre approche SEO basée sur les données.
        </p>
        <div class="flex gap-4 mt-6">
          {socialLinks.map(social => (
            <a
              href={social.href}
              class="text-gray-400 hover:text-primary-400 transition-colors duration-300"
              target="_blank"
              rel="noopener noreferrer"
            >
              <span class="sr-only">{social.name}</span>
              <svg class="h-6 w-6 transform hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={social.icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>

      <!-- Services -->
      <div class="animate-fade-in [animation-delay:200ms]">
        <h3 class="text-lg font-semibold mb-4 text-white/90">Services</h3>
        <ul class="space-y-3">
          {footerLinks.services.map(link => (
            <li>
              <a 
                href={link.href}
                class="text-gray-400 hover:text-primary-400 transition-colors duration-300 text-sm inline-block relative group"
              >
                <span class="relative z-10">{link.name}</span>
                <span class="absolute bottom-0 left-0 w-0 h-px bg-primary-400 transition-all duration-300 group-hover:w-full"></span>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Entreprise -->
      <div class="animate-fade-in [animation-delay:400ms]">
        <h3 class="text-lg font-semibold mb-4 text-white/90">Entreprise</h3>
        <ul class="space-y-3">
          {footerLinks.entreprise.map(link => (
            <li>
              <a 
                href={link.href}
                class="text-gray-400 hover:text-primary-400 transition-colors duration-300 text-sm inline-block relative group"
              >
                <span class="relative z-10">{link.name}</span>
                <span class="absolute bottom-0 left-0 w-0 h-px bg-primary-400 transition-all duration-300 group-hover:w-full"></span>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Légal -->
      <div class="animate-fade-in [animation-delay:600ms]">
        <h3 class="text-lg font-semibold mb-4 text-white/90">Légal</h3>
        <ul class="space-y-3">
          {footerLinks.legal.map(link => (
            <li>
              <a 
                href={link.href}
                class="text-gray-400 hover:text-primary-400 transition-colors duration-300 text-sm inline-block relative group"
              >
                <span class="relative z-10">{link.name}</span>
                <span class="absolute bottom-0 left-0 w-0 h-px bg-primary-400 transition-all duration-300 group-hover:w-full"></span>
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Séparateur -->
    <div class="h-px bg-gradient-to-r from-transparent via-gray-700 to-transparent"></div>

    <!-- Copyright -->
    <div class="pt-8 text-center animate-fade-in [animation-delay:800ms]">
      <p class="text-gray-400 text-sm">
        © {currentYear} HorizonReach. Tous droits réservés.
      </p>
    </div>
  </div>
</footer> 