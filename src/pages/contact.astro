---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactForm.astro';

// TODO: Mettre à jour ces informations avec les vraies données de l'agence
const contactInfo = {
  email: 'contact@agence-seo-data.fr',
  phone: '01 23 45 67 89',
  address: '123 Avenue des Champs-Élysées, 75008 Paris, France',
  social: {
    linkedin: 'https://www.linkedin.com/company/agence-seo-data',
    twitter: 'https://twitter.com/agenceseodatafr'
  }
};
---

<Layout
  title="Contact | Agence SEO Data-Driven"
  description="Contactez notre agence SEO data-driven pour discuter de vos projets. Expertise en référencement naturel et analyse de données."
>
  <Header />
  
  <main class="pt-20">
    <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6">
            Parlons de votre projet
          </h1>
          <p class="text-xl text-blue-100">
            Discutons de vos objectifs et de comment nous pouvons vous aider à les atteindre
          </p>
        </div>
      </div>
    </section>

    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            <!-- Contact Form -->
            <div class="bg-white dark:bg-gray-800 p-8 rounded-xl shadow-lg">
              <h2 class="text-2xl font-bold mb-6 dark:text-white">
                Envoyez-nous un message
              </h2>
              <ContactForm />
            </div>

            <!-- Contact Info -->
            <div class="space-y-8">
              <div>
                <h2 class="text-2xl font-bold mb-6 dark:text-white">
                  Informations de contact
                </h2>
                <div class="space-y-4">
                  <div class="flex items-center space-x-4">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                    <a href={`mailto:${contactInfo.email}`} class="text-gray-600 dark:text-gray-300 hover:text-blue-600">
                      {contactInfo.email}
                    </a>
                  </div>
                  <div class="flex items-center space-x-4">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                    <a href={`tel:${contactInfo.phone.replace(/\s/g, '')}`} class="text-gray-600 dark:text-gray-300 hover:text-blue-600">
                      {contactInfo.phone}
                    </a>
                  </div>
                  <div class="flex items-center space-x-4">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    <span class="text-gray-600 dark:text-gray-300">
                      {contactInfo.address}
                    </span>
                  </div>
                </div>
              </div>

              <div>
                <h2 class="text-2xl font-bold mb-6 dark:text-white">
                  Suivez-nous
                </h2>
                <div class="flex space-x-4">
                  <a
                    href={contactInfo.social.linkedin}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-gray-600 dark:text-gray-300 hover:text-blue-600"
                  >
                    <span class="sr-only">LinkedIn</span>
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                    </svg>
                  </a>
                  <a
                    href={contactInfo.social.twitter}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-gray-600 dark:text-gray-300 hover:text-blue-600"
                  >
                    <span class="sr-only">Twitter</span>
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                    </svg>
                  </a>
                </div>
              </div>

              <div class="bg-gray-50 dark:bg-gray-700 p-8 rounded-xl">
                <h2 class="text-2xl font-bold mb-6 dark:text-white">
                  Horaires d'ouverture
                </h2>
                <ul class="space-y-2 text-gray-600 dark:text-gray-300">
                  <li>Lundi - Vendredi : 9h00 - 18h00</li>
                  <li>Samedi - Dimanche : Fermé</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "SEO Data-Driven",
    "url": "https://votre-agence.com",
    "logo": "https://votre-agence.com/logo.png",
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "01 23 45 67 89",
      "contactType": "customer service",
      "email": "contact@votre-agence.com",
      "areaServed": "FR",
      "availableLanguage": ["French"]
    },
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Paris",
      "addressCountry": "FR"
    },
    "sameAs": [
      "https://www.linkedin.com/company/votre-agence",
      "https://twitter.com/votre-agence"
    ]
  }
</script> 