---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

const breadcrumbs = [
  { label: 'Accueil', href: '/' },
  { label: 'Audit Gratuit', href: '/audit-gratuit', current: true }
];

const auditPoints = [
  {
    title: 'Analyse Technique',
    description: 'Évaluation complète de la structure technique de votre site',
    features: [
      'Vitesse de chargement',
      'Structure des URLs',
      'Optimisation mobile',
      'Balisage HTML'
    ]
  },
  {
    title: 'Analyse du Contenu',
    description: 'Examen approfondi de votre stratégie de contenu',
    features: [
      'Qualité du contenu',
      'Mots-clés ciblés',
      'Structure sémantique',
      'Méta-données'
    ]
  },
  {
    title: 'Analyse des Backlinks',
    description: 'Évaluation de votre profil de liens externes',
    features: [
      'Qualité des backlinks',
      'Diversité des sources',
      'Textes d\'ancrage',
      'Autorité des domaines'
    ]
  }
];
---

<Layout 
  title="Audit SEO Gratuit | HorizonReach"
  description="Obtenez un audit SEO gratuit de votre site. Découvrez les points d'amélioration pour booster votre visibilité en ligne."
>
  <Header />

  <main class="bg-black text-white">
    <!-- Hero Section -->
    <section class="relative min-h-[40vh] flex items-center">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-violet-900/20 via-black to-black"></div>
      <div class="absolute inset-0" style="background: linear-gradient(to bottom right, rgba(139, 92, 246, 0.1) 0%, rgba(30, 64, 175, 0.1) 100%), url('/grid.svg');"></div>
      
      <div class="container relative mx-auto px-4 py-24">
        <div class="max-w-4xl">
          <Breadcrumbs items={breadcrumbs} />
          
          <h1 class="text-4xl md:text-6xl font-bold mt-8 mb-6">
            <span class="block">Audit SEO</span>
            <span class="bg-gradient-to-r from-violet-500 via-blue-500 to-violet-500 bg-clip-text text-transparent">Gratuit</span>
          </h1>
          
          <p class="text-xl text-gray-300 mb-8">
            Découvrez le potentiel de croissance de votre site avec notre audit SEO data-driven gratuit.
          </p>
        </div>
      </div>
    </section>

    <!-- Audit Points Section -->
    <section class="py-32 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-b from-black via-violet-950/20 to-black"></div>
      <div class="container relative mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-16">
          {auditPoints.map((point) => (
            <div class="relative group">
              <div class="absolute inset-0 bg-gradient-to-r from-violet-600/50 to-blue-600/50 rounded-2xl blur-xl transition-all duration-300 group-hover:blur-2xl opacity-0 group-hover:opacity-100"></div>
              <div class="relative p-8 rounded-2xl bg-gray-900/50 border border-violet-500/20 hover:border-violet-500/50 transition-all duration-300">
                <h3 class="text-xl font-bold mb-4 bg-gradient-to-r from-violet-400 to-blue-400 bg-clip-text text-transparent">
                  {point.title}
                </h3>
                <p class="text-gray-400 mb-6">{point.description}</p>
                <ul class="space-y-3">
                  {point.features.map((feature) => (
                    <li class="flex items-center text-gray-300">
                      <svg class="w-5 h-5 mr-2 text-violet-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>

        <!-- Audit Form -->
        <div class="max-w-2xl mx-auto">
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2" for="name">
                  Nom complet
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="w-full px-4 py-3 rounded-lg bg-gray-900/50 border border-violet-500/20 focus:border-violet-500 focus:ring-2 focus:ring-violet-500/20 text-white placeholder-gray-400 transition-all duration-300"
                  placeholder="John Doe"
                  required
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2" for="email">
                  Email professionnel
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="w-full px-4 py-3 rounded-lg bg-gray-900/50 border border-violet-500/20 focus:border-violet-500 focus:ring-2 focus:ring-violet-500/20 text-white placeholder-gray-400 transition-all duration-300"
                  placeholder="john@entreprise.com"
                  required
                />
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2" for="website">
                URL de votre site
              </label>
              <input
                type="url"
                id="website"
                name="website"
                class="w-full px-4 py-3 rounded-lg bg-gray-900/50 border border-violet-500/20 focus:border-violet-500 focus:ring-2 focus:ring-violet-500/20 text-white placeholder-gray-400 transition-all duration-300"
                placeholder="https://www.votresite.com"
                required
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2" for="message">
                Objectifs principaux
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full px-4 py-3 rounded-lg bg-gray-900/50 border border-violet-500/20 focus:border-violet-500 focus:ring-2 focus:ring-violet-500/20 text-white placeholder-gray-400 transition-all duration-300"
                placeholder="Quels sont vos objectifs SEO ?"
                required
              ></textarea>
            </div>
            <div>
              <button
                type="submit"
                class="relative w-full px-8 py-4 font-semibold text-white rounded-lg overflow-hidden group text-center"
              >
                <div class="absolute inset-0 w-full h-full transition-all duration-300 bg-gradient-to-r from-violet-600 via-blue-600 to-violet-600 group-hover:bg-gradient-to-r group-hover:from-violet-500 group-hover:via-blue-500 group-hover:to-violet-500"></div>
                <div class="absolute inset-0 w-full h-full transition-all duration-300 opacity-0 group-hover:opacity-25 bg-[radial-gradient(circle_at_center,_white_0%,_transparent_100%)]"></div>
                <span class="relative">Obtenir mon audit gratuit</span>
              </button>
            </div>
          </form>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout> 