    </section>

    <!-- Audit Points Section -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12 max-w-6xl mx-auto">
          {auditPoints.map(point => (
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8">
