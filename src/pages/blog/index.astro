---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCategories, type CategoryItem } from '../../lib/directus';

const categories: CategoryItem[] = await getCategories();
---

<Layout 
  title="Blog HorizonReach | Ressources SEO Data-Driven"
  description="Explorez nos articles et ressources sur le SEO data-driven. Découvrez nos analyses et guides pratiques pour un référencement basé sur les données."
>
  <Header />
  
  <main class="bg-black text-white">
    <!-- Hero Section -->
    <section class="relative min-h-[60vh] flex items-center">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-violet-900/20 via-black to-black"></div>
      <div class="absolute inset-0" style="background: linear-gradient(to bottom right, rgba(139, 92, 246, 0.1) 0%, rgba(30, 64, 175, 0.1) 100%), url('/grid.svg');"></div>
      
      <div class="container relative mx-auto px-4 py-32">
        <div class="max-w-4xl">
          <h1 class="text-5xl md:text-7xl font-bold mb-8">
            <span class="block">Explorez notre</span>
            <span class="bg-gradient-to-r from-violet-500 via-blue-500 to-violet-500 bg-clip-text text-transparent">Blog SEO</span>
          </h1>
          <p class="text-xl md:text-2xl text-gray-300 mb-12 max-w-2xl">
            Découvrez nos derniers articles, analyses et guides pratiques pour maîtriser le SEO data-driven.
          </p>
        </div>
      </div>
    </section>

    <!-- Categories Section -->
    <section class="py-32 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-b from-black via-violet-950/20 to-black"></div>
      <div class="container relative mx-auto px-4">
        <h2 class="text-4xl md:text-5xl font-bold text-center mb-20">
          Nos <span class="bg-gradient-to-r from-violet-500 via-blue-500 to-violet-500 bg-clip-text text-transparent">catégories</span>
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {categories.map((category: CategoryItem) => (
            <div class="relative group">
              <div class="absolute inset-0 bg-gradient-to-r from-violet-600/50 to-blue-600/50 rounded-2xl blur-xl transition-all duration-300 group-hover:blur-2xl opacity-0 group-hover:opacity-100"></div>
              <a
                href={`/blog/categories/${category.slug}`}
                class="block relative p-8 rounded-2xl bg-gray-900/50 border border-violet-500/20 hover:border-violet-500/50 transition-all duration-300"
              >
                <h3 class="text-xl font-bold mb-4 bg-gradient-to-r from-violet-400 to-blue-400 bg-clip-text text-transparent">
                  {category.titre}
                </h3>
                <div class="mt-6 flex items-center text-violet-400 group-hover:text-violet-300 transition-colors duration-300">
                  <span>Explorer les articles</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                  </svg>
                </div>
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout> 