---
import { getCategories } from '../../lib/directus';
import Layout from '../../layouts/Layout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

const categories = await getCategories();

const breadcrumbs = [
  { label: 'Accueil', href: '/' },
  { label: 'Blog', href: '/blog', current: true }
];
---

<Layout 
  title="Blog SEO Data-Driven"
  description="Explorez nos articles et ressources sur le SEO data-driven. Découvrez nos analyses et guides pratiques pour un référencement basé sur les données."
>
  <main class="pt-24 pb-16">
    <div class="container mx-auto px-4">
      <Breadcrumbs items={breadcrumbs} />
      
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mt-8 mb-6">
        Blog SEO Data-Driven
      </h1>
      
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-12">
        Explorez nos articles et ressources sur le SEO data-driven. Découvrez nos analyses et guides pratiques.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {categories.map(category => (
          <a 
            href={`/blog/categories/${category.slug}`}
            class="block p-6 bg-white dark:bg-gray-800 rounded-xl shadow-sm hover:shadow-md transition-all duration-300"
          >
            <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
              {category.titre}
            </h2>
          </a>
        ))}
      </div>
    </div>
  </main>
</Layout> 